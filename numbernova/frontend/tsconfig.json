{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "jsx": "react-jsx",
    "allowJs": false,

    "strict": true,
    "strictPropertyInitialization": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,

    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "jest", "node"]
  },
  "include": ["src"]
}
